<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Luncher">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date"
            android:id="@+id/btnDate"
            android:layout_above="@+id/sD1"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Time"
            android:id="@+id/btnTime"
            android:layout_above="@+id/btnDate"
            android:layout_alignRight="@+id/btnDate"
            android:layout_alignEnd="@+id/btnDate" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Switch
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:text="Device 1"
                android:id="@+id/sD1"
                android:checked="false"
                android:layout_gravity="center_vertical"
                android:textColor="#ea792222"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <Switch
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:text="Device 2"
                android:id="@+id/sD2"
                android:checked="false"
                android:textColor="#f5293381"
                android:layout_below="@+id/sD1"
                android:layout_centerHorizontal="true" />

            <Switch
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:text="Device 3"
                android:id="@+id/sD3"
                android:checked="false"
                android:textColor="#f5712981"
                android:layout_below="@+id/sD2"
                android:layout_centerHorizontal="true" />

            <Switch
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:text="Device 4"
                android:id="@+id/sD4"
                android:checked="false"
                android:textColor="#f8298129"
                android:layout_below="@+id/sD3"
                android:layout_centerHorizontal="true" />
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/btnSaveSceduale"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="88dp" />
    </LinearLayout>

</RelativeLayout>